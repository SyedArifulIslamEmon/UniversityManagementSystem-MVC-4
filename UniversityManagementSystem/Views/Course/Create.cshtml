@model UniversityManagementSystem.Models.Course

@{
    ViewBag.Title = "Course Entry";
}

<script type="text/javascript">
    function FillData(id) {
        $("#section-data").load("AssignCourse/FilteredSection", { departmentId: id });
    }

    $(function () {
        $("#departmentId").change(function () {
            var id = $("#departmentId").val();
            FillData(id);
        });
    });
</script>

<h2>Course Entry</h2><hr />

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>

        <div class="editor-label">
            @Html.LabelFor(model => model.Code)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Code)
            @Html.ValidationMessageFor(model => model.Code)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DepartmentId, "Deparment")
        </div>
        <div class="editor-field">
            @Html.DropDownList("DepartmentId", string.Empty)
            @Html.ValidationMessageFor(model => model.DepartmentId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SemesterId, "Semester")
        </div>
        <div class="editor-field">
            @Html.DropDownList("SemesterId")
            @Html.ValidationMessageFor(model => model.SemesterId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Credit)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Credit)
            @Html.ValidationMessageFor(model => model.Credit)
        </div>

        <p>
            <input class="btn btn-primary" type="submit" value="Save" />
        </p>
    </fieldset>
}

<div >
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
